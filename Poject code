#include <stdio.h>
#include <stdlib.h>
#include "function.h"
#include "config.h"
unsigned int a;
int main(void)
{   
   T1CON = 0x20;
   TRISD = 0xff; //defined input pins for IR sensor 
   TRISB = 0x00;
   PORTD = 0xff;   //port d as output
