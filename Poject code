         RB0=1;   //set green led high at parking spot4 to identify spot is 
        __delay_ms(200);
        RB1=1;   //set green led high at parking spot4 to identify spot is full
          __delay_ms(200);
        RC5=1;   //set green led high at parking spot4 to identify spot is full
