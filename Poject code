        Lcd_Set_Cursor(1,1);
        Lcd_Write_String("SPOT 1 2 3 FREE");
        Lcd_Set_Cursor(2,1);
        Lcd_Write_String(" PARK AT ANY");
            RC4=0;  //red turns off when vehicle enters
